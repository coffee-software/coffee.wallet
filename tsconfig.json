{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "es2015",
      "es5",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "pretty": false
  },
  "include": [
    "src/*",
    "test/*",
    "test/**/*"
  ]
}
